{% extends "base.html.twig" %}

{% block title %} Dashboard Gite PROGICA {% endblock %}

{% block body %}

<h1>Administration des gites</h1>

{% for message in app.flashes('success') %}
    <div class="alert alert-primary">
        <p>{{ message }}</p>
    </div>
{% endfor %}

<a href="{{ path('admin.newG') }}" class="mt-3 btn btn-danger">Créer</a>

<div class="row mt-5"></div>
<table class="table table-striped table-secondary text-center">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
            <th scope="col">Surface</th>
            <th scope="col">Chambre</th>
            <th scope="col">Adresse</th>
            <th scope="col">Ville</th>
            <th scope="col">Code postal</th>
            <th scope="col">Animaux</th>
        </tr>
    </thead>
    <tbody>
        {% for gite in gites %}
        <tr>
            <th>{{gite.id}}</th>
            <th>{{gite.name}}</th>
            <td>{{gite.description}}</td>
            <td>{{gite.surface}}</td>
            <td>{{gite.bedrooms}}</td>
            <td>{{gite.address}}</td>
            <td>{{gite.city}}</td>
            <td>{{gite.postalcode}}</td>
            {% if gite.animals %}
                            <td>Autorisés</td>
                    {% else %} <td>Refusés</td>
                    {% endif %}
            <td><a href="" class="btn btn-secondary">Editer</a></td>
            
        </tr>
        {% endfor %}
</table>


{% endblock %}